<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal">

    <TextView
        android:id="@+id/teamNumberTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:clickable="true"
        android:onClick="onClickTeamNumber"/>


    <!--Make as many of these counters as you need-->
    <com.example.sam.blutoothsocketreceiver.Counter
        android:id="@+id/Speed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="3dp"
        custom:dataName="Speed"
        custom:startingValue="2"
        custom:max="4"
        custom:min="0"
        custom:increment="1"/>

    <com.example.sam.blutoothsocketreceiver.Counter
        android:id="@+id/Agility"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        custom:dataName="Agility"
        custom:startingValue="2"
        custom:max="4"
        custom:min="0"
        custom:increment="1"/>

    <com.example.sam.blutoothsocketreceiver.Counter
        android:id="@+id/Defense"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        custom:dataName="Defense"
        custom:startingValue="2"
        custom:max="4"
        custom:min="1"
        custom:increment="1"/>

    <com.example.sam.blutoothsocketreceiver.Counter
        android:id="@+id/GoodDecision"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        custom:dataName="Good Decisions"
        custom:startingValue="0"
        custom:max="100"
        custom:min="0"
        custom:increment="1"/>

    <com.example.sam.blutoothsocketreceiver.Counter
        android:id="@+id/BadDecision"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        custom:dataName="Bad Decisions"
        custom:startingValue="0"
        custom:max="100"
        custom:min="0"
        custom:increment="1"/>





</LinearLayout>